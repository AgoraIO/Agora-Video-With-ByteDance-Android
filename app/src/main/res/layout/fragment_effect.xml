<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_effect"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <io.agora.rtcwithbyte.view.ProgressBar
            android:id="@+id/pb_effect"
            app:textHeight="20dp"
            app:textSize="12sp"
            app:circleRadius="8dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/iv_default_beauty"
            android:src="@drawable/ic_effect"
            android:padding="8dp"
            android:layout_gravity="bottom"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <ImageView
            android:id="@+id/iv_normal_effect"
            android:src="@drawable/ic_beauty_smooth"
            android:padding="8dp"
            android:layout_gravity="bottom"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </LinearLayout>

    <include layout="@layout/fragment_identify" />
</LinearLayout>