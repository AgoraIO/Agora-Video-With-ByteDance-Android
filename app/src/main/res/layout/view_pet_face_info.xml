<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/pet_face_info_height"
    android:background="@color/tipboard_bg"
    android:orientation="vertical"
    android:padding="3dp">


    <LinearLayout
        android:background="@color/colorBg"
        android:layout_width="match_parent"
        android:padding="4dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="12sp"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pet_face_type" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:gravity="end"
            android:layout_marginStart="20dp"
            android:minWidth="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tv_pet_face_type"
                android:textSize="12sp"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_left_eye_pet_face_info"
            android:text="@string/left_eye_open"
            android:textSize="12sp"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginEnd="1dp"
            android:gravity="center"
            android:padding="4dp"
            android:background="@color/colorBg"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_right_eye_pet_face_info"
            android:text="@string/right_eye_open"
            android:textSize="12sp"
            android:textColor="@color/colorWhite"
            android:layout_margin="1dp"
            android:gravity="center"
            android:padding="4dp"
            android:background="@color/colorBg"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_mouth_pet_face_info"
            android:text="@string/mouth_open"
            android:textSize="12sp"
            android:textColor="@color/colorWhite"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginStart="1dp"
            android:gravity="center"
            android:padding="4dp"
            android:background="@color/colorBg"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>


