<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/loading</item>
        <!--禁止多点触控-->
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <style name="ActivityBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:windowBackground">@drawable/loading</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <style name="faceInfoTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14dp</item>
    </style>
    <style name="FeatureItemTextStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingLeft">5dp</item>
    </style>
    <style name="CustomFloaterTextAppearance" parent="android:TextAppearance.Small">
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">@android:color/darker_gray</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">3</item>
    </style>
    <style name="SeekBarStyle" parent="Widget.DiscreteSeekBar">
        <item name="dsb_indicatorTextAppearance">@style/CustomFloaterTextAppearance</item>
        <item name="dsb_indicatorColor">@color/dsb_progressbar_color</item>
        <item name="dsb_progressColor">@color/dsb_progressbar_color</item>
    </style>

    <style name="FullScreenTheme" parent="ActivityBaseTheme">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <style name="photo_tip_popup_anim_style">
        <item name="android:windowEnterAnimation">@anim/popup_tip_in</item>
        <!-- 指定显示的动画xml -->

        <item name="android:windowExitAnimation">@anim/popup_tip_out</item>
        <!-- 指定消失的动画xml -->
    </style>
</resources>
